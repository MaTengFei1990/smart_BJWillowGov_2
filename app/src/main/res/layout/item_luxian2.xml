<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baise"
    android:orientation="vertical">

    <!--just contain two view-->
    <com.d.lib.slidelayout.SlideLayout
        android:id="@+id/sl_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--content view-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/iv_gouxuankuang"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:src="@mipmap/gouxuankuang"/>


            <TextView
                android:layout_toRightOf="@+id/iv_gouxuankuang"
                android:id="@+id/tv_jingquName"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="路线一"
                android:textColor="@color/huise_text"
                android:textSize="17sp" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_syncText"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/huise_text"
                android:textSize="@dimen/text_zhong" />

        </RelativeLayout>


        <!--slide view-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tongbu"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/lv"
                android:gravity="center"
                android:text="同步"
                android:textColor="@color/baise"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/huise_hint"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/baise"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/chengse"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/baise"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#C7C7CD"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/baise"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#FF3A30"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/baise"
                android:textSize="14dp" />

        </LinearLayout>
    </com.d.lib.slidelayout.SlideLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e4e5" />
</LinearLayout>