<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baise"
    android:orientation="vertical">

    <!--just contain two view-->
    <com.d.lib.slidelayout.SlideLayout
        android:id="@+id/sl_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--content view-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_gouxuankuang"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/gouxuankuang"/>


            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_daiban" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_state"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_projectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:text="ssss"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_zhong" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/huise_text"
                        android:text="ssss"
                        android:textSize="@dimen/text_xiao" />


                    <View
                        android:layout_width="15dp"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/huise_text" />

                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/huise_text"
                        android:text="ssss"
                        android:textSize="@dimen/text_xiao" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_allCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/huise_line"
                        android:text="总数量：10条"
                        android:textSize="@dimen/text_xiao" />



                    <TextView
                        android:id="@+id/tv_syncCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/huise_line"
                        android:text="已同步：2条"
                        android:textSize="@dimen/text_xiao" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="ssss"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textColor="@color/huise_text"
                android:textSize="@dimen/text_zhong" />

        </RelativeLayout>


        <!--slide view-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tongbu"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/lv"
                android:gravity="center"
                android:text="同步"
                android:textColor="@color/baise"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/huise_hint"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/baise"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/chengse"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/baise"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#C7C7CD"
                android:gravity="center"
                android:text="修改"
                android:visibility="gone"
                android:textColor="@color/baise"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/lanse_bg"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/baise"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#FF3A30"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/baise"
                android:textSize="14dp" />


        </LinearLayout>
    </com.d.lib.slidelayout.SlideLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e4e5" />
</LinearLayout>