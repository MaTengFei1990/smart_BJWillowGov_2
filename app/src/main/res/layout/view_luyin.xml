<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/touming" >
	<RelativeLayout
	    	android:id="@+id/layout_luyin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:background="#b3000000"
            android:layout_centerHorizontal="true" >

		<ImageView
		    android:id="@+id/image_luyin"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="100dp"
		    android:src="@mipmap/maic0" />

		<LinearLayout
		    android:id="@+id/layout_bt_luyin"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/image_luyin"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="46dp"
		    android:background="@drawable/corners_bg"
		    android:orientation="horizontal" >

			<ImageButton
			    android:id="@+id/imageButton_luyin"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@mipmap/maic_z02"
			    android:layout_margin="10dp"
			    android:background="@color/touming" />
			<Button
			    android:id="@+id/button_luyin"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@color/touming"
			    android:textColor="@color/baise"
			    android:layout_marginTop="14dp"
			    android:layout_marginBottom="14dp"
			    android:layout_marginRight="14dp"
			    android:textSize="20sp"
			    android:text="按住说话" />

		</LinearLayout>

     </RelativeLayout>
</LinearLayout>