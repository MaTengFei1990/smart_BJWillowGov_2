<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baise"
    android:orientation="vertical">

    <!--just contain two view-->
    <com.d.lib.slidelayout.SlideLayout
        android:id="@+id/sl_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--content view-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_state"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxEms="10"
                        android:text="编          号:"
                        android:textColor="@color/heise"
                        android:textSize="@dimen/text_zhong" />
                    <TextView
                        android:id="@+id/tv_gridNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:maxEms="10"
                        android:text="ssss"
                        android:textColor="@color/heise"
                        android:textSize="@dimen/text_zhong" />


                </LinearLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="树 木 总  量："
                        android:textColor="@color/huise_line"
                        android:textSize="@dimen/text_xiao" />



                    <TextView
                        android:id="@+id/tv_countOfTree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/huise_line"
                        android:textSize="@dimen/text_xiao" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/huise_line"
                        android:text="区            域："
                        android:textSize="@dimen/text_xiao" />



                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/huise_line"
                        android:textSize="@dimen/text_xiao" />


                </LinearLayout>


            </LinearLayout>





            <Button
                android:id="@+id/btn_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lanse_bg"
                android:text="地图"
                android:layout_alignParentRight="true"
                android:textColor="@color/baise"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_zhong"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lanse_bg"
                android:text="树木列表"
                android:layout_toLeftOf="@+id/btn_map"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/baise"
                android:textSize="@dimen/text_zhong"/>



        </RelativeLayout>


        <!--slide view-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/chengse"
                android:gravity="center"
                android:text="编辑"
                android:visibility="gone"
                android:textColor="@color/baise"
                android:textSize="14dp" />



            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#FF3A30"
                android:gravity="center"
                android:text="删除"
                android:visibility="gone"
                android:textColor="@color/baise"
                android:textSize="14dp" />


        </LinearLayout>
    </com.d.lib.slidelayout.SlideLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e4e5" />
</LinearLayout>