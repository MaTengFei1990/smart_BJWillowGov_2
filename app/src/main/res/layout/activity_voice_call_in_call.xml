<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_map"
        android:layout_width="fill_parent"
        android:background="@color/bg_lan"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/ib_back"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@mipmap/icon_back"
            android:padding="13dp"
            android:background="@color/touming"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="群聊"
            android:textColor="@color/baise"
            android:textSize="@dimen/tv_size_big"/>

        <ImageView
            android:id="@+id/iv_shure"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@mipmap/icon_yes" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_view"
        android:layout_width="match_parent"
        android:background="@color/baise"
        android:orientation="horizontal"
        android:layout_gravity="center"

        android:layout_height="60dp">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@color/baise"
        android:layout_marginTop="0.5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_zhong"
            android:textColor="@color/text_hei"
            android:padding="10dp"
            android:lineSpacingMultiplier="1.5"/>

    </LinearLayout>




    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">







        <LinearLayout
            android:id="@+id/layoutMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_jingyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_chat_jingyin"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@mipmap/chat_video_jingyin_img_normal" />

                <TextView
                    android:id="@+id/textJingYin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="静音"
                    android:textColor="@color/heise_text"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutGuaDuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/img_bg_guaduan_call"
                    android:src="@mipmap/chat_video_guaduan_img_normal" />

                <TextView
                    android:id="@+id/textBtnGuaduan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="挂断"
                    android:textColor="@color/heise_text"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/spaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_chat_mianti"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:src="@mipmap/chat_video_mianti_img_normal" />

                <TextView
                    android:id="@+id/textMianti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:text="免提"
                    android:textColor="@color/heise_text"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>


        <Chronometer
            android:id="@+id/elapsedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layoutMenu"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:text="30:22"
            android:textColor="@color/text_hei"
            android:textSize="16dp" />


    </RelativeLayout>

</LinearLayout>
