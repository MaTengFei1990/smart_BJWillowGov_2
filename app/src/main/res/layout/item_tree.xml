<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/baise"
    android:orientation="vertical">

    <!--just contain two view-->
    <com.d.lib.slidelayout.SlideLayout
        android:id="@+id/sl_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--content view-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_state"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_jingquName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="ssss"
                    android:textColor="@color/heise"
                    android:textSize="@dimen/text_zhong" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text="长势："
                        android:textColor="@color/huise_line"
                        android:textSize="@dimen/text_xiao" />
                    <TextView
                        android:id="@+id/tv_growing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:textColor="@color/huise_line"
                        android:textSize="@dimen/text_xiao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxEms="10"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:text="安全风险："
                        android:textColor="@color/huise_line"
                        android:textSize="@dimen/text_xiao" />
                    <TextView
                        android:id="@+id/tv_deagerTree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:textColor="@color/huise_line"
                        android:textSize="@dimen/text_xiao" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/huise_line"
                        android:text="总数量：10条"
                        android:visibility="gone"
                        android:textSize="@dimen/text_xiao" />



                    <TextView
                        android:id="@+id/tv_countOfTree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone"
                        android:textColor="@color/huise_line"
                        android:text="已同步：2条"
                        android:textSize="@dimen/text_xiao" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_treetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="ssss"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textColor="@color/huise_text"
                android:textSize="@dimen/text_zhong" />

        </RelativeLayout>


        <!--slide view-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@color/chengse"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/baise"
                android:textSize="14dp" />



            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#FF3A30"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/baise"
                android:textSize="14dp" />


        </LinearLayout>
    </com.d.lib.slidelayout.SlideLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e4e5" />
</LinearLayout>